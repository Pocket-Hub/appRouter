{
  "name": "@sap/ams-dev",
  "version": "0.8.6",
  "config": {
    "opaVersion": "0.60.0-sap-0.3.7",
    "dclCompilerVersion": "0.18.0"
  },
  "description": "NodesJS AMS development environment",
  "bin": {
    "compile-dcl": "lib/bin/compileDcl.js",
    "start-opa": "lib/bin/startOpa.js",
    "stop-opa": "lib/bin/stopOpa.js"
  },
  "main": "index.js",
  "files": [
    "cds-plugin.js",
    "lib/",
    "resources/"
  ],
  "scripts": {
    "update": "node lib/updateBins.js",
    "binChmodX": "find lib/bin -name '*.js' -exec chmod +x {} \\;",
    "tsc": "rm -rf lib/* && tsc -p tsconfig.json && npm run binChmodX",
    "tsc-windows": "(if exist lib rmdir /s /q lib) && tsc -p tsconfig.json",
    "pretest": "npm run tsc && npm run update",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' mocha --recursive --extension ts,test.js -r ts-node/register",
    "test-windows": "npm run tsc-windows && npm run update && set TS_NODE_COMPILER_OPTIONS={\"module\": \"commonjs\"} && mocha --recursive --extension ts,test.js -r ts-node/register",
    "doLint": "npx eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.wdf.sap.corp:CPSecurity/cloud-authorization-nodejs-development.git"
  },
  "keywords": [
    "ams",
    "dcl"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sap/ams": "^1.14.1",
    "node-watch": "^0.7.4",
    "tar-fs": "^3.0.0",
    "yargs": "~17.7.2"
  },
  "devDependencies": {
    "@sap/cds": "^7.5.0",
    "@sap/cds-dk": "^7.5.0",
    "@types/chai": "4.3.14",
    "@types/mocha": "10.0.6",
    "@types/node": "18.19.31",
    "@types/tar-fs": "^2.0.1",
    "@types/yargs": "17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "axios": "^1.6.2",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@sap/cds": "^7.5.0",
    "@sap/cds-dk": "^7.5.0"
  },
  "peerDependenciesMeta": {
    "@sap/cds": {
      "optional": true
    },
    "@sap/cds-dk": {
      "optional": true
    }
  }
}